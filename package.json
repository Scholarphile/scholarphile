{
  "name": "permates",
  "version": "2.0.0",
  "description": "Scholarphile - A modern learning platform with enhanced file management, search, and AI recommendations",
  "main": "index.html",
  "scripts": {
    "start": "python -m http.server 8000",
    "dev": "python -m http.server 8000",
    "build": "echo 'Static site - no build required'",
    "deploy": "echo 'Deploy via GitHub Actions'",
    "worker:dev": "npx wrangler dev --compatibility-date=2024-01-15",
    "worker:deploy": "npx wrangler deploy",
    "worker:debug": "npx wrangler dev --debug --compatibility-date=2024-01-15",
    "db:create": "npx wrangler d1 create scholarphile-db",
    "db:migrate": "npx wrangler d1 execute scholarphile-db --file=./schema.sql --local",
    "db:migrate:remote": "npx wrangler d1 execute scholarphile-db --file=./schema.sql",
    "storage:create": "npx wrangler r2 bucket create scholarphile-documents",
    "test": "node test-setup.js",
    "test:worker": "npx wrangler dev --test-scheduled",
    "logs": "npx wrangler tail",
    "analytics": "npx wrangler analytics",
    "setup": "npm run db:create && npm run db:migrate && npm run storage:create"
  },
  "keywords": [
    "education",
    "flashcards",
    "learning",
    "notes",
    "study",
    "ai-recommendations",
    "file-management",
    "collaborative-filtering"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/permates.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/permates/issues"
  },
  "homepage": "https://github.com/yourusername/permates#readme",
  "devDependencies": {
    "wrangler": "^4.26.0"
  }
}
